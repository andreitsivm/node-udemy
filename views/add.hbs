<h1>Add course</h1>

<form action='/add' method="POST">
    <div class='input-field'>
            <input  id="title"  name="title" type="text" class="validate" placeholder="Enter course title" required>
            <label for="title">Name of course</label>
            {{!-- <span class="helper-text" data-error="Введіть назву курсу" >Helper text</span> --}}
    </div>
    <div class='input-field'>
            <input  id="price"  name="price"type="text" class="validate" placeholder="Enter course price" required min="10">
            <label for="price">Course price</label>
            {{!-- <span class="helper-text" data-error="Введіть ціну курсу">Helper text</span> --}}
    </div>
    <div class='input-field'>
            <input  id="img"  name="pic_url" type="text" class="validate" required>
            <label for="img">Picture URL</label>
            {{!-- <span class="helper-text" data-error="Введіть URL картинки" >Helper text</span> --}}
    </div>
    <button class="btn btn-primary">Add course</button>
</form>